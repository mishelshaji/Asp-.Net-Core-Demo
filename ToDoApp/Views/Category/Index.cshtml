@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<div class="flex justify-content-end">
    <a asp-action="Create" asp-controller="Category" class="btn btn-success">+ New Category</a>
</div>

<h1>Category List</h1>

@if(Model.Any())
{
        <table class="table table-striped table-hover">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@(item.Description == default? "No Description": item.Description)</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">Delete</a>
                </td>
            </tr>
        }
    </table>
}
else{
    <div class="alert alert-info text-center" style="font-weight: bold;">
        No matching records found.
    </div>
}